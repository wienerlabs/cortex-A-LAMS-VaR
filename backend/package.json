    "@solana-agent-kit/plugin-defi": "^2.0.8",
    "@solana-agent-kit/plugin-misc": "^2.0.6",
    "@solana-agent-kit/plugin-token": "^2.0.9",
    "@solana/web3.js": "^1.98.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "ai": "^6.0.3",
    "bs58": "^6.0.0",
    "convex": "^1.31.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "prisma": "^6.19.1",
    "solana-agent-kit": "^2.0.10",
