                strat.enabled = !strat.enabled;
                strat.status = strat.enabled ? 'running' : 'paused';
                toggleEl.classList.toggle('on', strat.enabled);
                renderStrategyPanel(idx);
                var active2 = STRATEGIES.filter(function(s) { return s.enabled; }).length;
