# Cortex AI Agent - Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Ethereum RPC URL (Alchemy, Infura, or other provider)
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_api_key

# Chain ID (1 = Mainnet, 5 = Goerli, 11155111 = Sepolia)
CHAIN_ID=1

# Private key for transaction signing (DO NOT COMMIT!)
PRIVATE_KEY=

# =============================================================================
# SOLANA CONFIGURATION
# =============================================================================

SOLANA_RPC_URL=
SOLANA_RPC_URL_SECONDARY=
SOLANA_RPC_COOLDOWN_MS=60000
SOLANA_RPC_MAX_FAILURES=3

# WebSocket endpoints (optional â€” derived from RPC URLs if not set)
SOLANA_WS_URL=
SOLANA_WS_URL_SECONDARY=
SOLANA_WS_MAX_FAILURES=3

SOLANA_PRIVATE_KEY=
SOLANA_COMMITMENT=confirmed
SIMULATION_MODE=true

# RPC health monitoring HTTP port
HEALTH_PORT=9090

# Solana data providers
HELIUS_API_KEY=
BIRDEYE_API_KEY=
BIRDEYE_RPM_LIMIT=60
SOLSCAN_API_KEY=
JUPITER_API_KEY=
JUPITER_RPM_LIMIT=600
JITO_RPC_URL=

# CEX integration (for CEX-DEX arbitrage)
BINANCE_API_KEY=
BINANCE_SECRET_KEY=
CEX_DEPOSIT_TIMEOUT_MS=600000

# =============================================================================
# API KEYS
# =============================================================================

# The Graph API Key
THEGRAPH_API_KEY=

# Etherscan API Key
ETHERSCAN_API_KEY=

# CoinGecko API Key (optional)
COINGECKO_API_KEY=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://postgres:password@localhost:5432/cortex

# Redis URL
REDIS_URL=redis://localhost:6379

# =============================================================================
# HUGGINGFACE CONFIGURATION
# =============================================================================

# HuggingFace Hub Token
HF_TOKEN=

# HuggingFace Repository ID
HF_REPO_ID=your-username/cortex-models

# =============================================================================
# VAULT CONFIGURATION
# =============================================================================

# Vault contract address
VAULT_ADDRESS=

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================

# API Host and Port
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Log level
LOG_LEVEL=INFO
