# Cortex AI Agent - Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Ethereum RPC URL (Alchemy, Infura, or other provider)
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_api_key

# Chain ID (1 = Mainnet, 5 = Goerli, 11155111 = Sepolia)
CHAIN_ID=1

# Private key for transaction signing (DO NOT COMMIT!)
PRIVATE_KEY=

# =============================================================================
# API KEYS
# =============================================================================

# The Graph API Key
THEGRAPH_API_KEY=

# Etherscan API Key
ETHERSCAN_API_KEY=

# CoinGecko API Key (optional)
COINGECKO_API_KEY=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://postgres:password@localhost:5432/cortex

# Redis URL
REDIS_URL=redis://localhost:6379

# =============================================================================
# HUGGINGFACE CONFIGURATION
# =============================================================================

# HuggingFace Hub Token
HF_TOKEN=

# HuggingFace Repository ID
HF_REPO_ID=your-username/cortex-models

# =============================================================================
# VAULT CONFIGURATION
# =============================================================================

# Vault contract address
VAULT_ADDRESS=

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================

# API Host and Port
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Log level
LOG_LEVEL=INFO
