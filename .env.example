TRADING_MODE=NORMAL

# ============= CACHE (CASHEWS) =============
# Redis URL for caching (leave empty for in-memory fallback)
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300

# ============= MODEL PERSISTENCE (REDIS) =============
# Uses REDIS_URL by default; set separately if you want a different DB
PERSISTENCE_ENABLED=true
PERSISTENCE_REDIS_URL=redis://localhost:6379/1
PERSISTENCE_KEY_PREFIX=cortex:store:

# ============= WAVE 11B: MODEL ENHANCEMENT ENGINES =============
# Copula engine: "native" (scipy-based) or "vine" (pyvinecopulib)
COPULA_ENGINE=native
# Portfolio optimization: "native" (numpy) or "skfolio"
PORTFOLIO_OPT_ENGINE=native
# Default exchange for ccxt data feed
CCXT_DEFAULT_EXCHANGE=binance

# ============= A-LAMS VaR THRESHOLDS =============
# Per-strategy VaR thresholds (fraction, e.g. 0.03 = 3%)
# High-risk strategies (perps/leverage) are BLOCKING — trades rejected if API unreachable
ALAMS_VAR_THRESHOLD_SPOT=0.08
ALAMS_VAR_THRESHOLD_LP=0.06
ALAMS_VAR_THRESHOLD_ARB=0.05
ALAMS_VAR_THRESHOLD_PERPS=0.03

# ============= SLIPPAGE CONFIGURATION (BPS) =============
# Per-strategy slippage in basis points (1 BPS = 0.01%)
# Read by both TypeScript (production.ts) and Python (config.py)
SLIPPAGE_ARBITRAGE_BPS=50
SLIPPAGE_SPOT_BPS=100
SLIPPAGE_LENDING_BPS=50
SLIPPAGE_LP_DEPOSIT_BPS=100
SLIPPAGE_LP_WITHDRAW_BPS=50

# ============= REDIS CONFIGURATION =============
REDIS_ENABLED=true

# ============= OPTIONAL =============
HF_TOKEN=
HF_REPO_ID=cortex-ai/models

# ============= API SERVERS =============
# Cortex Risk Engine API (MSM, EVT, Guardian, Debate)
API_HOST=0.0.0.0
API_PORT=8000
# Agent ML API (A-LAMS-VaR, predictions, execution)
AGENT_API_PORT=8001
# TypeScript client URLs (auto-configured from ports above)
CORTEX_API_URL=http://localhost:8000/api/v1
ALAMS_API_URL=http://localhost:8001/api/v1

# ============= NARRATOR (LLM-POWERED NARRATIVE ENGINE) =============
# Disabled by default — zero side-effect when off
NARRATOR_ENABLED=false
# LLM provider base URL (Ollama default, also works with Together/OpenAI)
NARRATOR_BASE_URL=http://localhost:11434/v1
# API key (not needed for Ollama, required for cloud providers)
NARRATOR_API_KEY=
# Model name (Ollama format: "qwen2.5:32b-instruct-q5_K_M", OpenAI: "gpt-4o-mini")
# 32GB RAM → qwen2.5:32b-instruct-q5_K_M (23GB, best structured data quality)
# 16GB RAM → qwen2.5:14b-instruct-q5_K_M (11GB, good budget option)
NARRATOR_MODEL=qwen2.5:32b-instruct-q5_K_M
NARRATOR_MAX_TOKENS=1024
NARRATOR_TEMPERATURE=0.3
NARRATOR_TIMEOUT=60.0

# ============= API SECURITY =============
# Leave CORTEX_API_KEYS empty to disable auth in dev
CORTEX_API_KEYS=
CORTEX_ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000
CORTEX_RATE_LIMIT_READ=60
CORTEX_RATE_LIMIT_WRITE=10
